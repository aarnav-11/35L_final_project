
{
    "name": "Mind App Chrome Extension",
    "description": "Chrome Extension for Mind App",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "hello.html",
      "default_icon": "assets/icon.png"
    }
  }